            <ImageView fitHeight="19.0" fitWidth="15.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@regenerateIcon.png" />
               </image>
            </ImageView>
         </graphic></Button>
      <Label fx:id="motivationalMessageLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="71.0" layoutY="137.0" prefHeight="54.0" prefWidth="550.0" text="Welcome test to your mood tracker!" textOverrun="WORD_ELLIPSIS">
         <font>
            <Font name="Lucida Console" size="12.0" />
         </font></Label>
   </children>
</Pane>
