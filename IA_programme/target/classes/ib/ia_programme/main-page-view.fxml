<Pane prefHeight="400.0" prefWidth="720.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ib.ia_programme.controllers.MainPageController">
   <children>
      <ImageView fx:id="backgroundImageView" fitHeight="434.0" fitWidth="720.0" layoutY="-6.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@backgroundImage.jpg" />
         </image>
      </ImageView>
      <Button fx:id="dailyThoughtsButton" layoutX="201.0" layoutY="259.0" maxWidth="204.0" minWidth="204.0" mnemonicParsing="false" onAction="#onDailyThoughtsButtonClick" prefHeight="43.0" prefWidth="204.0" text="DAILY THOUGHTS" textAlignment="CENTER" />
      <Button fx:id="personalImprovementButton" layoutX="412.0" layoutY="259.0" maxWidth="294.0" minWidth="294.0" mnemonicParsing="false" onAction="#onPersonalImprovementButtonClick" prefHeight="43.0" prefWidth="294.0" text="PERSONAL IMPROVEMENT" textAlignment="CENTER" />
